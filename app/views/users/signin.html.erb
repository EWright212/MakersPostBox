
<div class="container">
    <h1>Please sign in</h1>
    <p>Please fill the below fields.</p>
    <div class="success_flash">
      <%= flash[:success]%>
    </div>
    <div class="error_flash">
      <%= flash[:error]%>
    </div>

    <%= bootstrap_form_for(:session) do |form| %>
      <p>
        <%= form.email_field :email %>
      </p>
      <p>
        <%= form.password_field :password%>
      </p>
      <p>
        <%= form.submit "Sign In", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
